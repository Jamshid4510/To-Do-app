<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddToDoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#D93BC9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to do"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_to_do_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="To do name"
        android:layout_weight="1"
        android:background="#E3E1E1"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        />
    <EditText
        android:id="@+id/et_to_do_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="To do description"
        android:layout_weight="1"
        android:background="#E3E1E1"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E3E1E1"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        >
        <Spinner
            android:id="@+id/spinner_for_degree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E3E1E1"
            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_to_do_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="To do create data"
        android:layout_weight="1"
        android:background="#E3E1E1"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:id="@+id/et_to_do_deadline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="To do deadline"
        android:layout_weight="1"
        android:background="#E3E1E1"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginHorizontal="24dp"
        android:gravity="bottom|end"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_save"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="#D93BC9"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            app:cardMaxElevation="20dp"
            android:layout_marginBottom="24dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Save"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#D93BC9"
                android:textColor="#fff"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>